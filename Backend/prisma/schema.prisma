  phone            String?
  email            String?
  telegramId       String?
  telegramUsername String?
  firstName        String?
  lastName         String?
  avatar           String?
  originalAvatar   String?
  passwordHash     String?
  currentCityId    String?
  deletedAt        DateTime @default(now())

