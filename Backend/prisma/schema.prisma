  reporter    User                @relation("MessageReportReporter", fields: [reporterId], references: [id], onDelete: Cascade)

  @@unique([messageId, reporterId])
  @@index([messageId])
  @@index([reporterId])
  @@index([status])
  @@index([createdAt])
}

